<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="8dp"
                android:text="Add Dish"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/add_menu_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="59dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="59dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Name (i.e. biriyani)"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/add_menu_regular_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="59dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Reqular Price (i.e. 200)"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_menu_name" />

            <EditText
                android:id="@+id/add_menu_regular_price_incurred"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="59dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Reqular Price (incurred)"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_menu_regular_price" />


            <EditText
                android:id="@+id/add_menu_large_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="59dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Large Price (i.e. 300)"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_menu_regular_price_incurred" />

            <EditText
                android:id="@+id/add_menu_large_price_incurred"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="59dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Large Price (incurred)"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_menu_large_price" />

            <EditText
                android:id="@+id/add_menu_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="59dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Average cooking time (in minutes)"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_menu_large_price" />

            <EditText
                android:id="@+id/add_menu_description"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="59dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Description"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_menu_time" />

            <Spinner
                android:id="@+id/add_menu_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="40dp"
                android:entries="@array/menu_arr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_user_email" />

            <Button
                android:id="@+id/add_menu_add_image_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/poppins"
                android:text="Select image"
                android:theme="@style/AppTheme.Button" />

            <ImageView
                android:id="@+id/add_menu_imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/noimage" />

            <ProgressBar
                android:id="@+id/add_menu_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/add_menu_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/poppins"
                android:text="Next"
                android:onClick="onClickBtn"
                android:theme="@style/AppTheme.Button"
                 />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>